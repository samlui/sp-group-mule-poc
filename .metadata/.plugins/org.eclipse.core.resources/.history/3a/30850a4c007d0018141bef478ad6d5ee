http://www.mulesoft.org/schema/mule/ee/dw http://www.mulesoft.org/schema/mule/ee/dw/current/dw.xsd">
    <sub-flow name="processFlow">
        <set-variable variableName="userid" value="#[null]" doc:name="userid"/>
        <set-variable variableName="accounts" value="#[null]" doc:name="accounts"/>
        <flow-ref name="userFlow" doc:name="Flow Reference"/>
        <flow-ref name="meterFlow" doc:name="Flow Reference"/>
        <flow-ref name="peerFlow" doc:name="Peer Reference"/>
        <dw:transform-message doc:name="Transform Message" metadata:id="35d11e16-e0f8-4e47-a263-e4c2297d773b">
            <dw:input-variable mimeType="application/json" variableName="accounts"/>
            <dw:input-variable mimeType="application/json" variableName="userid"/>
            <dw:set-payload><![CDATA[%dw 1.0
%output application/json
---
{
	change_password_required: (flowVars.userid.responseData.RespUserProfileService.customerProfile.changePassword=="Y")? true : false as :boolean,
	name: flowVars.userid.responseData.RespUserProfileService.customerProfile.name,
	user_id: flowVars.userid.responseData.RespUserProfileService.customerProfile.userId,
	bp_numbers: flowVars.userid.responseData.RespUserProfileService.bpNumbers map ((bpNumber , indexOfBpNumber) -> {
		bp_number: bpNumber.bpNo,
		system: bpNumber.system
	}),
	email: flowVars.userid.responseData.RespUserProfileService.customerProfile.email
}]]></dw:set-payload>
        </dw:transform-message>
    </sub-flow>
